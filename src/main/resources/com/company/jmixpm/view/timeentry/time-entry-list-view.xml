<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://timeEntryListView.title"
      focusComponent="timeEntriesDataGrid">
    <data>
        <collection id="timeEntriesDc"
                    class="com.company.jmixpm.entity.TimeEntry">
            <fetchPlan extends="_base">
                <property name="task" fetchPlan="_base"/>
                <property name="user" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="timeEntriesDl" readOnly="true">
                <query>
                    <![CDATA[select e from TimeEntry e]]>
                </query>
            </loader>
        </collection>
        <collection id="lastWeekTimeEntriesDc"
                    class="com.company.jmixpm.entity.TimeEntry">
            <fetchPlan extends="_base">
                <property name="task" fetchPlan="_base"/>
                <property name="user" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="lastWeekTimeEntriesDl">
                <query>
                    <![CDATA[select e from TimeEntry e where @between(e.entryDate, now-7, now, day)]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <tabSheet id="tabSheet"
                  width="100%"
                  height="100%">
            <tab id="browseTab"
                 label="msg://browseTab.label">
                <vbox padding="false"
                      height="100%">
                    <genericFilter id="genericFilter"
                                   dataLoader="timeEntriesDl">
                        <properties include=".*"/>
                    </genericFilter>
                    <hbox id="buttonsPanel" classNames="buttons-panel">
                        <button id="createBtn" action="timeEntriesDataGrid.create"/>
                        <button id="editBtn" action="timeEntriesDataGrid.edit"/>
                        <button id="removeBtn" action="timeEntriesDataGrid.remove"/>
                        <simplePagination id="pagination" dataLoader="timeEntriesDl"/>
                    </hbox>
                    <dataGrid id="timeEntriesDataGrid"
                              width="100%"
                              minHeight="20em"
                              dataContainer="timeEntriesDc"
                              columnReorderingAllowed="true">
                        <actions>
                            <action id="create" type="list_create"/>
                            <action id="edit" type="list_edit"/>
                            <action id="remove" type="list_remove"/>
                        </actions>
                        <columns resizable="true">
                            <column property="task"/>
                            <column property="timeSpent"/>
                            <column property="entryDate"/>
                            <column property="user"/>
                            <column property="description"/>
                        </columns>
                    </dataGrid>
                </vbox>
            </tab>
            <tab id="lastWeekTimeEntriesTab"
                 label="msg://lastWeekTimeEntries.label">
                <vbox padding="false" height="100%">
                    <hbox padding="false">
                        <button id="lastWeekRefreshBtn"
                                action="lastWeekTimeEntriesDataGrid.refresh"/>
                    </hbox>
                    <dataGrid id="lastWeekTimeEntriesDataGrid"
                              width="100%"
                              minHeight="20em"
                              dataContainer="lastWeekTimeEntriesDc"
                              columnReorderingAllowed="true">
                        <actions>
                            <action id="refresh" type="list_refresh"/>
                        </actions>
                        <columns resizable="true">
                            <column property="task"/>
                            <column property="timeSpent"/>
                            <column property="entryDate"/>
                            <column property="user"/>
                            <column property="description"/>
                        </columns>
                    </dataGrid>
                </vbox>
            </tab>
        </tabSheet>
        <hbox id="lookupActions" visible="false">
            <button id="selectBtn" action="selectAction"/>
            <button id="discardBtn" action="discardAction"/>
        </hbox>
    </layout>
</view>
