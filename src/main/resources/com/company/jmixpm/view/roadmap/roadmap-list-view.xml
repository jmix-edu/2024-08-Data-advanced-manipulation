<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://roadmapListView.title"
      focusComponent="roadmapsDataGrid">
    <data>
        <collection id="roadmapsDc"
                    class="com.company.jmixpm.entity.Roadmap">
            <fetchPlan extends="_base"/>
            <loader id="roadmapsDl" readOnly="true">
                <query>
                    <![CDATA[select e from Roadmap e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <genericFilter id="genericFilter"
                       dataLoader="roadmapsDl">
            <properties include=".*"/>
        </genericFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createBtn" action="roadmapsDataGrid.create"/>
            <button id="editBtn" action="roadmapsDataGrid.edit"/>
            <button id="removeBtn" action="roadmapsDataGrid.remove"/>
            <simplePagination id="pagination" dataLoader="roadmapsDl"/>
        </hbox>
        <dataGrid id="roadmapsDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="roadmapsDc"
                  columnReorderingAllowed="true">
            <actions>
                <action id="create" type="list_create"/>
                <action id="edit" type="list_edit"/>
                <action id="remove" type="list_remove"/>
            </actions>
            <columns resizable="true">
                <column property="name"/>
                <column property="startDate"/>
                <column property="endDate"/>
                <column property="goal"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectBtn" action="selectAction"/>
            <button id="discardBtn" action="discardAction"/>
        </hbox>
    </layout>
</view>
